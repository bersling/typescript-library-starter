{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "declaration": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strict": true
  },
  "include": [
    "src/**/*"
  ]
}
